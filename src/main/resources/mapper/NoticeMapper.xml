<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.together.repository.NoticeMapper">

    <select id="findAllNotice" resultType="map">
        SELECT * FROM Notice
    </select>

    <select id="findNoticeById" parameterType="Integer" resultType="Notice">
        SELECT * FROM Notice
        WHERE not_id = #{notId}
    </select>

    <insert id="createNotice" parameterType="Notice" useGeneratedKeys="true" keyProperty="notId">
        INSERT INTO Notice
        VALUES (#{notWriter},#{notWriTime},#{notTitle},#{notContent})
    </insert>

    <update id="updateNotice" parameterType="Notice">
        UPDATE Notice SET not_title = #{notTitle} AND not_content = #{notContent} WHERE not_id = #{notId}
    </update>

    <delete id="deleteNoticeById" parameterType="Integer">
        DELETE FROM Notice
        WHERE not_id = #{notId}
    </delete>
</mapper>